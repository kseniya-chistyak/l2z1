#include <iostream>
using namespace std;

class CC
{
public:
double n;
double g;
CC (int a, double b) {n = a, g = b;}

};

CC operator + (CC C1, CC &C2)
{
CC C3(C1.n, C1.g + C2.g);
C2.g = 0;
return C3;
}

int main()
{
CC C1(7896, 200);
CC C2(1252, 50);
C1=C1+C2;
cout<<C1.g<<" : "<<C2.g<<endl;
C2=C2+C1;
cout<<C1.g<<" : "<<C2.g;
return 0;
}
