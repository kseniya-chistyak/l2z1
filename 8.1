#include <iostream>
using namespace std;
class CreditCard {
public:

    int Number;
    float Balance;
    CreditCard
    (int  a = 1234, float b = 50 )
    {
      Number = a;
        Balance = b;}
    float Put(float v) {
       return Balance = Balance + v;};
      
    
    float Take(float v) {
        return Balance = Balance - v;};
      
};
int main()
{
    CreditCard firstCC(1234, 50);
    CreditCard * cart=&firstCC;
    cart->Put(70);
    cout << firstCC.Balance << endl;
    cart->Take(90);
    cout << firstCC.Balance << endl;
    
    return 0;
}
