#include <iostream>
#include <cstring> //библиотека для функции strlen

using namespace std;

int main()
{
    int a, i=0,*d; //указатель на переменную
    char x[80]; //место для хранения 80 символов
    cout << "Ввод символов" << "\n";
    cin >> x;//ввод строки х
    cout<<"Результат - ";//вывод
    a = strlen(x);//х это строка.функция strlen в данном случаем возвращает длину строки,на которую указывает х
    while (2) { //тело цикла
        d=(int *) &x[i];// элемент & является ссылкой на адрес строхи х элемента i
        (*d)++;//задали шаг 1
        cout<<x[i];//вывод элемента из строки х
        if(a==i) break;
        i++;
    }
    return 0;
}
